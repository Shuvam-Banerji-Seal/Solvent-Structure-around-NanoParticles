# Restart files
analysis/**/*.restart filter=lfs diff=lfs merge=lfs -text

# PPM files
analysis/**/*.ppm filter=lfs diff=lfs merge=lfs -text

# Molecular structure files
analysis/**/*.mol filter=lfs diff=lfs merge=lfs -text
analysis/**/*.pdb filter=lfs diff=lfs merge=lfs -text

# Data files in analysis/data
analysis/data/** filter=lfs diff=lfs merge=lfs -text

# Plot files
analysis/plots/** filter=lfs diff=lfs merge=lfs -text

# Videos
analysis/videos/** filter=lfs diff=lfs merge=lfs -text
